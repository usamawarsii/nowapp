<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Booking">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/background_01"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Bookings"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:elevation="5dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/pink"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Order"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:elevation="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Served"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past Order"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ProfileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_toEndOf="@id/ProfileImage"
                    android:text="Hassan Raza"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Order time 10:30 pm"
                    android:id="@+id/order"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/ProfileImage"
                    android:layout_below="@id/name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Id"
                    android:id="@+id/orderId"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="20dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id"
                    android:fontFamily="@font/poppins_regular"
                    android:text="ph1001"
                    android:textSize="12sp"
                    android:layout_below="@id/name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="65dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/pink"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/dot"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Time"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b"
                        android:text="10:30pm"
                        android:layout_below="@id/a"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/dot"
                        android:fontFamily="@font/poppins_semibold"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="5dp"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dot1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/pink"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />
                    <TextView
                        android:id="@+id/aa"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/dot1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Persons"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/bb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aa"
                        android:layout_toEndOf="@id/dot1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dot2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/pink"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/a1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/dot2"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Orders"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b1"
                        android:text="Tikka 2"
                        android:layout_below="@id/a1"
                        android:textSize="17sp"
                        android:textColor="@color/pink"
                        android:layout_toEndOf="@id/dot2"
                        android:fontFamily="@font/poppins_semibold"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="5dp"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dot3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/pink"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />
                    <TextView
                        android:id="@+id/aa1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/dot3"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Reminder"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/bb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aa1"
                        android:layout_toEndOf="@id/dot3"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="10:00pm"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:id="@+id/details"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/pink"
                android:layout_marginStart="250dp"
                android:layout_marginBottom="12dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:id="@+id/recBooking"
            />
    </LinearLayout>

</ScrollView>