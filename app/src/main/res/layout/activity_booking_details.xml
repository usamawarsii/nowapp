                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dot211"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/pink"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/a111"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/dot211"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Orders"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b111"
                        android:text="Tikka 2"
                        android:layout_below="@id/a111"
                        android:textSize="17sp"
                        android:textColor="@color/pink"
                        android:layout_toEndOf="@id/dot211"
                        android:fontFamily="@font/poppins_semibold"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="5dp"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dot311"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/pink"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/aa111"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/dot311"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Reminder"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/bb111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aa111"
                        android:layout_toEndOf="@id/dot311"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="10:00pm"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Served"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/back"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refund"
                android:id="@+id/refund"
                android:backgroundTint="@color/pink"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>